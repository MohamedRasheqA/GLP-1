{
    "version": 2,
    "builds": [
      { "src": "app.py", "use": "@vercel/python" }
    ],
    "routes": [
      {
        "src": "/api/chat",
        "methods": ["OPTIONS"],
        "dest": "app.py"
      },
      {
        "src": "/(.*)",
        "dest": "app.py",
        "headers": {
          "Access-Control-Allow-Credentials": "true",
          "Access-Control-Allow-Origin": "https://glp-1.vercel.app",
          "Access-Control-Allow-Methods": "GET,OPTIONS,PATCH,DELETE,POST,PUT",
          "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Validation-Status"
        }
      }
    ]
  }
